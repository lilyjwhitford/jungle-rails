<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well new-button">
    <%= link_to 'Create New Category', [:new, :admin, :category], class: 'btn btn-primary' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><p class="link"><%= link_to category.name, category_path(category.id) %></p></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</section>