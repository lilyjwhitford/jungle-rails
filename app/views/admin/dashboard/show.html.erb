<section class="dashboard-show">
  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="row">
    <div class="col-md-6 col-lg-3">
      <div class="card bg-light mb-3">
        <div class="card-body">
          <h5 class="card-title"><strong>Number of Products:</strong></h5>
          <p class="card-text"><%= @product_count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card bg-light mb-3">
        <div class="card-body">
          <h5 class="card-title"><strong>Number of Categories:</strong></h5>
          <p class="card-text"><%= @category_count %></p>
        </div>
      </div>
    </div>
  </div>
</section>
